<!doctype html>
<html class='h-full'>
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="/public/css/tailwind.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet">
</head>
<!-- Exploding Chickens, game interface // RAk3rman -->
<body class='flex flex-col h-full' x-data="{ sidebar_open: false }" @keydown.window.escape="sidebar_open = false">
{{! Navigation bar }}
<nav class="">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
            {{! Exploding Chickens header }}
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <h1 class="h-8 text-3xl text-gray-700" style="font-family: Bebas Neue">EXPLODING <a class="text-yellow-400">CHICKENS</a></h1>
                </div>
            </div>
            {{! Right sidebar actions }}
            <div class="block">
                <div class="ml-4 flex items-center md:ml-6">
                    <span class="relative inline-flex">
                        {{! Active users }}
                        <div class="inline-flex items-center -space-x-1 overflow-hidden p-2" id="topbar_players">

                        </div>
                        {{! Slide over button }}
                        <button @click="sidebar_open = true" class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-white hover:bg-gray-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-white">
                            <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                            </svg>
                        </button>
                        {{! Status ping }}
                        <span class="flex absolute h-2 w-2 top-2 right-2 -mt-1 -mr-1">
                            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
                            <span class="relative inline-flex rounded-full h-2 w-2 bg-green-500"></span>
                        </span>
                    </span>
                </div>
            </div>
        </div>
    </div>
</nav>
{{! Draw and discard deck }}
<div class="flex flex-col items-center justify-center h-screen pb-10">
    <div class="flex align-top mb-10">
        <div class="inline-flex items-center p-2" id="center_players">
            {{! Sample player }}
            <div class="block text-center">
                <h1 class="text-gray-600 font-medium text-sm">
                    Loading <span class="animate-pulse inline-flex rounded-full h-1.5 w-1.5 mb-0.5 align-middle bg-gray-500"></span>
                </h1>
                <div class="flex flex-col items-center -space-y-3">
                    <img class="h-12 w-12 rounded-full" src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80" alt="">
                    <div class="-space-x-4 rotate-12">
                        <div class="transform inline-block rounded-md bg-gray-500 shadow-md h-5 w-4">
                            <h1 class="text-white text-sm">0</h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="flex align-bottom">
        <div class="rounded-xl shadow-lg h-52 w-40 sm:h-64 sm:w-52 mx-1 bg-center bg-contain" style="background-image: url('/public/cards/base/card_back.png')"></div>
        <div class="rounded-xl border-dashed border-4 border-gray-400 shadow-lg h-52 w-40 sm:h-64 sm:w-52 mx-1">
            <h1 class="text-gray-400 font-bold flex items-center justify-center h-52 sm:h-64">Discard Pile</h1>
        </div>
    </div>
</div>
{{! Card hand }}
<footer class='w-full h-28 text-center py-2'>
    <div class="-my-2 overflow-x-auto">
        <div class="align-middle inline-block min-w-full sm:px-0 lg:px-8">
            <div class="overflow-hidden">
                <div class="flex items-center">
                    <div class="inline-block rounded-xl border-4 border-gray-400 shadow-lg h-64 w-52 mx-1">
                        <h1 class="text-gray-400 font-bold flex items-center justify-center h-64">Defuse Card</h1>
                    </div>
                    <div class="inline-block rounded-xl border-4 border-gray-400 shadow-lg h-64 w-52 mx-1">
                        <h1 class="text-gray-400 font-bold flex items-center justify-center h-64">Skip Card</h1>
                    </div>
                    <div class="inline-block rounded-xl border-4 border-gray-400 shadow-lg h-64 w-52 mx-1">
                        <h1 class="text-gray-400 font-bold flex items-center justify-center h-64">Attack Card</h1>
                    </div>
                    <div class="inline-block rounded-xl border-4 border-gray-400 shadow-lg h-64 w-52 mx-1">
                        <h1 class="text-gray-400 font-bold flex items-center justify-center h-64">Reverse Card</h1>
                    </div>
                    <div class="inline-block rounded-xl border-4 border-gray-400 shadow-lg h-64 w-52 mx-1">
                        <h1 class="text-gray-400 font-bold flex items-center justify-center h-64">Random Card</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>
{{! Sidebar }}
<div class="fixed inset-0 overflow-hidden" x-show="sidebar_open">
    <div class="absolute inset-0 overflow-hidden" x-show="sidebar_open">
        <div x-show="sidebar_open" x-description="Background overlay, show/hide based on slide-over state." x-transition:enter="ease-in-out duration-500" x-transition:enter-start="opacity-0" x-transition:enter-end="opacity-100" x-transition:leave="ease-in-out duration-500" x-transition:leave-start="opacity-100" x-transition:leave-end="opacity-0" class="absolute inset-0 bg-gray-500 bg-opacity-75 transition-opacity" aria-hidden="true"></div>
        <section @click.away="sidebar_open = false" class="absolute inset-y-0 right-0 pl-10 max-w-full flex" aria-labelledby="slide-over-heading">
            <div class="relative w-screen max-w-md" x-description="Slide-over panel, show/hide based on slide-over state." x-show="sidebar_open" x-transition:enter="transform transition ease-in-out duration-500 sm:duration-700" x-transition:enter-start="translate-x-full" x-transition:enter-end="translate-x-0" x-transition:leave="transform transition ease-in-out duration-500 sm:duration-700" x-transition:leave-start="translate-x-0" x-transition:leave-end="translate-x-full">
                <div x-description="Close button, show/hide based on slide-over state." x-show="sidebar_open" x-transition:enter="ease-in-out duration-500" x-transition:enter-start="opacity-0" x-transition:enter-end="opacity-100" x-transition:leave="ease-in-out duration-500" x-transition:leave-start="opacity-100" x-transition:leave-end="opacity-0" class="absolute top-0 left-0 -ml-8 pt-4 pr-2 flex sm:-ml-10 sm:pr-4">
                    <button @click="sidebar_open = false" class="rounded-md text-gray-300 hover:text-white focus:outline-none focus:ring-2 focus:ring-white">
                        <span class="sr-only">Close panel</span>
                        <svg class="h-6 w-6" x-description="Heroicon name: x" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    </button>
                </div>
                {{! Content }}
                <div class="h-full flex flex-col py-6 bg-white shadow-xl overflow-y-scroll">
                    <div class="px-5">
                        <h2 class="text-xl font-medium text-gray-700">
                            Information
                        </h2>
                    </div>
                    <div class="mt-4 relative flex flex-col px-5">
                        {{! Sample player }}
                        <div class="flex items-center justify-between mb-2">
                            <div class="flex-1 min-w-0">
                                <h3 class="text-md font-bold text-gray-900 truncate">
                                    <span class="animate-pulse inline-flex rounded-full h-1.5 w-1.5 mb-0.5 align-middle bg-green-500"></span> Radison, Host
                                </h3>
                                <div class="mt-1 flex flex-col sm:flex-row sm:flex-wrap sm:mt-0 sm:space-x-6">
                                    <div class="flex items-center text-sm text-gray-500 hover:underline">
                                        https://exploding-chickens.com/game/fluffy-chicken
                                    </div>
                                </div>
                            </div>
                            <div class="flex mt-0 ml-4">
                                <span class="">
                                      <button type="button" class="inline-flex items-center px-2 py-1 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-500 hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-400">
                                            <svg class="-ml-1 mr-1 h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                                            </svg>
                                            Active
                                      </button>
                                </span>
                            </div>
                        </div>
                        <div class="flex flex-row w-full space-x-2 space-y-0 mb-4">
                            <div class="w-1/2">
                                <div class="widget w-full p-3 rounded-lg bg-white border border-gray-100 dark:bg-gray-900 dark:border-gray-800">
                                    <div class="flex flex-row items-center justify-between">
                                        <div class="flex flex-col">
                                            <div class="text-xs uppercase font-light text-gray-500">
                                                Cards in Deck
                                            </div>
                                            <div class="text-xl font-bold">
                                                50
                                            </div>
                                        </div>
                                        <svg class="stroke-current text-gray-500" height="24" width="24" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                                        </svg>
                                    </div>
                                </div>
                            </div>
                            <div class="w-1/2">
                                <div class="widget w-full p-3 rounded-lg bg-white border border-gray-100 dark:bg-gray-900 dark:border-gray-800">
                                    <div class="flex flex-row items-center justify-between">
                                        <div class="flex flex-col">
                                            <div class="text-xs uppercase font-light text-gray-500">
                                                Exploding Chickens
                                            </div>
                                            <div class="text-xl font-bold">
                                                4
                                            </div>
                                        </div>
                                        <svg class="stroke-current text-gray-500" height="24" width="24" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z" />
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.879 16.121A3 3 0 1012.015 11L11 14H9c0 .768.293 1.536.879 2.121z" />
                                        </svg>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{! Sidebar players }}
                    <div class="mt-4 px-5">
                        <h2 class="text-xl font-medium text-gray-700">
                            Players
                        </h2>
                    </div>
                    <div class="mt-4 relative flex flex-col px-5" id="sidebar_players">
                        <div class="flex items-center justify-between mb-2">
                            <div class="flex-1 min-w-0">
                                <h3 class="inline-flex text-md font-bold text-gray-900 truncate">
                                    <svg class="mr-1 mt-1 h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3 3m0 0l-3-3m3 3V4" />
                                    </svg>
                                    Loading players
                                </h3>
                            </div>
                        </div>
                    </div>
                    {{! Sidebar card packs }}
                    <div class="mt-4 px-5">
                        <h2 class="text-xl font-medium text-gray-700">
                            Card Packs
                        </h2>
                    </div>
                    <div class="mt-4 relative flex flex-col px-5">
                        {{! Base deck }}
                        <div class="flex items-center justify-between mb-2">
                            <div class="flex-1 min-w-0">
                                <h3 class="inline-flex text-md font-bold text-gray-900 truncate">
                                    <svg class="mr-1 mt-1 h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3 3m0 0l-3-3m3 3V4" />
                                    </svg>
                                    Base Deck
                                </h3>
                                <div class="mt-1 flex flex-col sm:flex-row sm:flex-wrap sm:mt-0 sm:space-x-6">
                                    <div class="flex items-center text-sm text-gray-500">
                                        52 cards, 5 actions
                                    </div>
                                </div>
                            </div>
                            <div class="flex mt-0 ml-4">
                                <span class="">
                                      <button type="button" class="inline-flex items-center px-2 py-1 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-500 hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-400">
                                            <svg class="-ml-1 mr-1 h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                            </svg>
                                            Imported
                                      </button>
                                </span>
                            </div>
                        </div>
                        {{! Sample pack }}
                        <div class="flex items-center justify-between mb-2">
                            <div class="flex-1 min-w-0">
                                <h3 class="inline-flex text-md font-bold text-gray-900 truncate">
                                    <svg class="mr-1 mt-1 h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3 3m0 0l-3-3m3 3V4" />
                                    </svg>
                                    <a class="text-red-600 pr-1">NSFW</a> Pack
                                </h3>
                                <div class="mt-1 flex flex-col sm:flex-row sm:flex-wrap sm:mt-0 sm:space-x-6">
                                    <div class="flex items-center text-sm text-gray-500">
                                        Coming soon in 2021!
                                    </div>
                                </div>
                            </div>
                            <div class="flex mt-0 ml-4">
                                <span class="">
                                      <button type="button" class="inline-flex items-center px-2 py-1 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                                            <svg class="-ml-1 mr-1 h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                                            </svg>
                                            Import
                                      </button>
                                </span>
                            </div>
                        </div>
                        {{! Add packs }}
                        <div class="flex items-center justify-between mb-2">
                            <div class="flex-1 min-w-0">
                                <div class="mt-1 flex flex-col sm:flex-row sm:flex-wrap sm:mt-0 sm:space-x-6">
                                    <div class="flex items-center text-xs text-gray-400">
                                        Want to add an explosive card pack? Submit a pull request <span class="text-blue-600 pl-1" target="_blank" href="https://github.com/rak3rman/exploding-chickens/pulls">here!</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>
{{! JS scripts }}
<script src="/socket.io/socket.io.js"></script>
<script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.min.js" defer></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
<script src="/public/js/game.js"></script>
<script>
    storage_check();
    update_game();
</script>
</body>
</html>